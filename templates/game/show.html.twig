{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ game.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Launch</th>
                <td>{{ game.launch ? game.launch|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ game.startDate ? game.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>LastPlayedDate</th>
                <td>{{ game.lastPlayedDate ? game.lastPlayedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PlayCount</th>
                <td>{{ game.playCount }}</td>
            </tr>
            <tr>
                <th>GotFrom</th>
                <td>{{ game.gotFrom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
