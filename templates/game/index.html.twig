{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Description</th>
                <th>Launch</th>
                <th>StartDate</th>
                <th>LastPlayedDate</th>
                <th>PlayCount</th>
                <th>GotFrom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.picture }}</td>
                <td>{{ game.description }}</td>
                <td>{{ game.launch ? game.launch|date('Y-m-d') : '' }}</td>
                <td>{{ game.startDate ? game.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ game.lastPlayedDate ? game.lastPlayedDate|date('Y-m-d') : '' }}</td>
                <td>{{ game.playCount }}</td>
                <td>{{ game.gotFrom }}</td>
                <td>
                    <a href="{{ path('app_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}">Create new</a>
{% endblock %}
